#!/usr/bin/env node
var debug = require('debug')('expressapp');
var app = require('../app');
var subscriber = require("../redis/subscriber");
var totalRequests = require("../models/totalRequests");

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
    debug('Express server listening on port ' + server.address().port);
});

var io = require("socket.io")(server);

io.on("connection", function(socket) {
    subscriber.on("message", function(channel, message) {
        socket.emit("http", JSON.parse(message));
    });

    socket.on("totalRequests", function(data) {     //TO-DO: Caching
        var parsedData = JSON.parse(data);

        var modelInstance = new totalRequests({
            requests: parsedData.requests,
            timestamp: parsedData.timestamp
        });

        modelInstance.save(function(err) {
            if(err) {
                console.log(err);
            }
        });
    })
});